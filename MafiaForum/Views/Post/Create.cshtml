@using Microsoft.AspNetCore.Identity
@model MafiaForum.ViewModels.Post.NewPostViewModel
@inject UserManager<User> UserManager

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading noBorder">
            New Post | @Model.ForumName
            <div class="forumLogo" style="background-image: url(@Model.ForumImageUrl)"></div>
            <span id="headingBtn">
                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.ForumId" class="btn btn-back">
                    Back to @Model.ForumName
                </a>
            </span>
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">
            <div class="authorBlock">
                You're submitting this post as <strong>@UserManager.FindByNameAsync(Model.AuthorName).Result.Nickname</strong>
            </div>
            <form asp-action="AddPost" method="post" id="addPostForum">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control" rows="20"></textarea>
                </div>
                <button type="submit" id="submitPostBtn" class="btn btn-submitPost">
                    Submit Post
                </button>
                <input asp-for="ForumId" type="hidden" />
            </form>
        </div>
    </div>
</div>