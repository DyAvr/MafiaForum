@using Microsoft.AspNetCore.Identity
@model IEnumerable<MafiaForum.Models.User>
@{
    ViewBag.Title = "Список пользователей";
}
@inject UserManager<User> UserManager

<a asp-action="Create">Добавить пользователя</a>

<table class="table table-hover" id="forumIndexTable">
    <tr class="myHover"><th>Email</th><th>Никнейм</th><th>Имя</th><th>Фамилия</th><th></th></tr>
    @foreach (var user in Model)
    {
<tr>
    <td>
        @user.Email
    </td>
    <td>@user.Nickname</td>
    <td>@user.Firstname</td>
    <td>@user.Lastname</td>
    <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
            <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Удалить
            </button>
        </form>
    </td>
</tr>
    }
</table>